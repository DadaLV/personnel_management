 <%= form_with(model: @employee, url: employees_path, method: :post) do |form| %>
    <% if @employee.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this position from being saved:</h2>
        <ul>
          <% @employee.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :middle_name %>
          <%= form.text_field :middle_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :passport_data %>
          <%= form.text_field :passport_data, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :date_of_birth %>
          <%= form.date_field :date_of_birth, class: "form-control" %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= form.label :place_of_birth %>
          <%= form.text_field :place_of_birth, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :home_address %>
          <%= form.text_field :home_address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :department_id %>
          <%= form.collection_select :department_id, Department.all, :id, :name, { include_blank: true }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit "Create Employee", class: "btn btn-primary" %>
          <%= link_to "Cancel", employees_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>