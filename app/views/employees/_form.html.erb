 <%= form_with(model: @employee, local: true) do |form| %>
    <%= render "shared/error_messages", object: @employee %>
    <div class="row">
      <div class="col">
        <div class="form-group">
          <%= form.label :first_name %>
          <%= form.text_field :first_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :middle_name %>
          <%= form.text_field :middle_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :last_name %>
          <%= form.text_field :last_name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :passport_data %>
          <%= form.text_field :passport_data, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :date_of_birth %>
          <%= form.date_field :date_of_birth, class: "form-control" %>
        </div>
      </div>
      <div class="col">
        <div class="form-group">
          <%= form.label :place_of_birth %>
          <%= form.text_field :place_of_birth, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :home_address %>
          <%= form.text_field :home_address, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= form.label :department_id %>
          <%= form.collection_select :department_id, Department.all, :id, :name, { include_blank: true }, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= form.submit "Submit", class: "btn btn-primary" %>
          <%= link_to "Cancel", employees_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>