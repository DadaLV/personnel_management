<div class="container m-4">
  <h2>Employee positions' history</h2>
  <table class="table table-hover table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Position Name</th>
        <th scope="col">Start Date</th>
        <th scope="col">End Date</th>
        <th scope="col">Years on Position</th>
        <th scope="col">Basic Salary</th>
        <th scope="col">Extra Salary</th>
        <th scope="col">Total Salary</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @employee_positions.each do |employee_position| %>
        <tr>
          <td><%= employee_position.position.name %></td>
          <td><%= employee_position.start_date %></td>
          <td><%= employee_position.end_date %></td>
          <td><%= calculate_years_on_position(employee_position) %></td>
          <td><%= employee_position.position.salary %></td>
          <td><%= calculate_extra_salary(employee_position) %></td>
          <td><%= employee_position.total_salary %></td>
          <td>
            <%= link_to "Edit", edit_employee_employee_position_path(@employee, employee_position), class: "btn btn-light" %>
          </td>
        </tr>
     <% end %>
    </tbody>
  </table>
</div>