<div class="container m-4">
  <h2><%= t('.edit_position') %></h2>
  
  <%= form_with(model: [@employee, @employee_position], url: employee_position_path(@employee, @employee_position), method: :patch) do |form| %>
    <%= render "shared/error_messages", object: @employee_position %>
    
    <div class="form-group">
      <%= form.label :start_date, t('employee_positions.index.start_date') %>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :end_date, t('employee_positions.index.end_date') %>
      <%= form.date_field :end_date, class: "form-control" %>
    </div>
    
    <%= form.submit t('button.submit'), class: "btn btn-primary mt-4" %>
  <% end %>
</div>