<%= form_with(model: [@employee, @employee_position]) do |form| %>
  <%= render "shared/error_messages", object: @employee_position %>
   
  <h3>Choose position</h3>
 <div class="form-group mb-4 col-sm-4">    
    <%= form.collection_select :position_id, Position.all, :id, :name, { prompt: true }, class: "form-select form-select-lg mb-3" %>
    <%= form.submit "Add Position", class: "btn btn-primary" %>
  </div>

  
<% end %>