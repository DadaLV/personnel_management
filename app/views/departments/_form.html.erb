<%= form_with(model: department) do |form| %>
  <%= render "shared/error_messages", object: department %>

  <div class="field mb-3">
  <div class="col-sm-3">
    <%= form.label :name %>
  </div>
  <div class="col-sm-9">
    <%= form.text_field :name %>
  </div>
</div>

<div class="field mb-3">
  <div class="col-sm-3">
    <%= form.label :abbreviation %>
  </div>
  <div class="col-sm-9">
    <%= form.text_field :abbreviation %>
  </div>
</div>

  <div class="mb-3">
    <%= form.submit class: "btn btn-primary"%>
  </div>
  <%= link_to "Go to Employees List", employees_path, class: "btn btn-primary mt-4" %>
  <%= link_to "Go to Departments List", departments_path, class: "btn btn-primary mt-4" %>
<% end %>