<%= form_with(model: department) do |form| %>
  <%= render "shared/error_messages", object: department %>

  <div class="field mb-3">
  <div class="col-sm-3">
    <%= form.label :name, t('.name') %>
  </div>
  <div class="col-sm-9">
    <%= form.text_field :name %>
  </div>
</div>

<div class="field mb-3">
  <div class="col-sm-3">
    <%= form.label :abbreviation, t('.abbreviation') %>
  </div>
  <div class="col-sm-9">
    <%= form.text_field :abbreviation %>
  </div>
</div>

  <div class="mb-3">
    <%= form.submit t('button.submit'), class: "btn btn-primary"%>
  </div>
  <%= link_to t('button.employees_list'), employees_path, class: "btn btn-primary mt-4" %>
  <%= link_to t('button.departments_list'), departments_path, class: "btn btn-primary mt-4" %>
<% end %>