<%= form_with(model: @position) do |form| %>
  <%= render "shared/error_messages", object: @position %>

  <div class="field mb-3">
    <%= form.label :name, t('.name') %>
    <%= form.text_field :name %>
  </div>

  <div class="field mb-3">
    <%= form.label :salary, t('.salary') %>
    <%= form.number_field :salary %>
  </div>

  <div class="mb-3">
    <%= form.submit t('button.submit'), class: "btn btn-primary"%>
  </div>
<% end %>